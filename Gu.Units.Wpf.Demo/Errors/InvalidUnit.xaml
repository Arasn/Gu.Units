<UserControl x:Class="Gu.Units.Wpf.Demo.Errors.InvalidUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:demo="clr-namespace:Gu.Units.Wpf.Demo"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:units="http://Gu.com/Units"
             DataContext="{x:Static demo:ViewModel.Instance}"
             mc:Ignorable="d">
    <TextBox Text="{Binding Length, Converter={units:LengthConverter invalid}}" />
</UserControl>
