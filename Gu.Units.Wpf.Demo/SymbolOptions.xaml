<UserControl x:Class="Gu.Units.Wpf.Demo.SymbolOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gu.Units.Wpf.Demo"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:units="http://Gu.com/Units"
             xmlns:units1="clr-namespace:Gu.Units;assembly=Gu.Units"
             DataContext="{x:Static local:ViewModel.Instance}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               Content="SymbolFormat=FractionHatPowers" />

        <TextBox Grid.Row="1" Text="{Binding Pressure, Converter={units:PressureConverter Unit={x:Static units:PressureUnit.NewtonsPerSquareMillimetre}, UnitInput=SymbolRequired, SymbolFormat=FractionHatPowers}}" />

        <Label Grid.Row="2"
               Grid.Column="0"
               Content="SymbolFormat=SignedHatPowers}" />

        <TextBox Grid.Row="3" Text="{Binding Pressure, Converter={units:PressureConverter Unit={x:Static units:PressureUnit.NewtonsPerSquareMillimetre}, UnitInput=SymbolRequired, SymbolFormat=SignedHatPowers}}" />

        <Label Grid.Row="4"
               Grid.Column="0"
               Content="SymbolFormat=SignedSuperScript" />

        <TextBox Grid.Row="5" Text="{Binding Pressure, Converter={units:PressureConverter Unit={x:Static units:PressureUnit.NewtonsPerSquareMillimetre}, UnitInput=SymbolRequired, SymbolFormat=FractionSuperScript}}" />

        
        <Label Grid.Row="6"
               Grid.Column="0"
               Content="SymbolFormat=SignedSuperScript" />

        <TextBox Grid.Row="7" Text="{Binding Pressure, Converter={units:PressureConverter Unit={x:Static units:PressureUnit.NewtonsPerSquareMillimetre}, UnitInput=SymbolRequired, SymbolFormat=SignedSuperScript}}" />
    </Grid>
</UserControl>
